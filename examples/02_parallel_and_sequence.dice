// p {} ブロック内の処理は並列で実行される
// -> を使うと、その2つの処理は順次実行される

func main() {
    p {
        print("task1: 並列実行");
        print("task2: これはtask3の前に実行") -> print("task3: これはtask2の後に実行");
    } -> print("finalize: 全ての並列処理が終わった後に実行");

    print("-----");

    // mock_sensorを使って、時間がかかる処理をシミュレート
    p {
        mock_sensor("温度センサー", 1);
        mock_sensor("湿度センサー", 0.5);
    } -> print("センサーデータの取得完了");
}
